<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorMain</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/MyMaterialTheme.TabLayout.TextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorMain</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="MyMaterialTheme.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="manifestoPartyImage">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="manifestoPartyText">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    

    <style name="knowledgeTitle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="knowledgeContents">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>
