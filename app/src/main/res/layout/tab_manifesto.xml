                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="변경"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:layout_margin="3dp"/>
        </android.support.v7.widget.CardView>

