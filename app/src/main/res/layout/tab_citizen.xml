<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/citizen_best"/>
            <TextView
                android:id="@+id/citizen_title_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="3dp"
                android:textSize="18dp"
                android:text="@string/citizen_total_title"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/citizen_num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:textSize="14dp"
                android:textColor="@color/fbutton_color_orange"
                android:text="@string/citizen_best_title_welfare"/>
            <TextView
                android:id="@+id/citizen_num1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="14dp"
                android:text="복지여 일어나라"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/citizen_num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="@color/fbutton_color_orange"
                android:text="@string/citizen_best_title_women"/>
            <TextView
                android:id="@+id/citizen_num2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:text="여성,가족이여 일어나라"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/citizen_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="@color/fbutton_color_orange"
                android:text="@string/citizen_best_title_economy"/>
            <TextView
                android:id="@+id/citizen_num3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:text="경제,일자리여 일어나라"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/citizen_num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="@color/fbutton_color_orange"
                android:text="@string/citizen_best_title_safety"/>
            <TextView
                android:id="@+id/citizen_num4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:text="안전이여 일어나라"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/citizen_num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="@color/fbutton_color_orange"
                android:text="@string/citizen_best_title_building"/>
            <TextView
                android:id="@+id/citizen_num5_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:text="주택, 도시 계획이여 일어나라"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorGray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/citizen_list"/>
            <TextView
                android:id="@+id/citizen_title_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="3dp"
                android:textSize="18dp"
                android:text="@string/citizen_sub_title"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            //교통
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <info.hoang8f.widget.FButton
                    android:id="@+id/citizen_welfare"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="교통"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"

                    fbutton:buttonColor="@color/fbutton_color_belize_hole"
                    fbutton:shadowEnabled="false"
                    fbutton:cornerRadius="5dp"
                    />
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                //주택
                <info.hoang8f.widget.FButton
                    android:layout_marginBottom="6dp"
                    android:layout_width="100dp"
                    android:layout_height="47dp"
                    android:text="주택"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="6dp"

                    fbutton:buttonColor="@color/fbutton_color_pomegranate"
                    fbutton:shadowEnabled="false"
                    fbutton:cornerRadius="5dp"
                    />
                //환경
                <info.hoang8f.widget.FButton
                    android:layout_width="100dp"
                    android:layout_height="47dp"
                    android:text="환경"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="6dp"

                    fbutton:buttonColor="@color/fbutton_color_nephritis"
                    fbutton:shadowEnabled="false"
                    fbutton:cornerRadius="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="3dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    //안전
                    <info.hoang8f.widget.FButton
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:text="안전"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"

                        fbutton:buttonColor="@color/fbutton_color_alizarin"
                        fbutton:shadowEnabled="false"
                        fbutton:cornerRadius="5dp"
                        />
                    //문화
                    <info.hoang8f.widget.FButton
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:text="문화"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"

                        fbutton:buttonColor="@color/fbutton_color_amethyst"
                        fbutton:shadowEnabled="false"
                        fbutton:cornerRadius="5dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    //건강
                    <info.hoang8f.widget.FButton
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:text="건강"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"

                        fbutton:buttonColor="@color/fbutton_color_green_sea"
                        fbutton:shadowEnabled="false"
                        fbutton:cornerRadius="5dp"
                        />

                    //건설
                    <info.hoang8f.widget.FButton
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:text="건설"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"

                        fbutton:buttonColor="@color/fbutton_color_concrete"
                        fbutton:shadowEnabled="false"
                        fbutton:cornerRadius="5dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                //복지
                <info.hoang8f.widget.FButton
                    android:layout_width="100dp"
                    android:layout_height="47dp"
                    android:text="복지"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"

                    fbutton:buttonColor="#ffe511"
                    fbutton:shadowEnabled="false"
                    fbutton:cornerRadius="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    //여성
                    <info.hoang8f.widget.FButton
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:text="여성"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"

                        fbutton:buttonColor="#ff7ee2"
                        fbutton:shadowEnabled="false"
                        fbutton:cornerRadius="5dp"
                        />
                    //경제
                    <info.hoang8f.widget.FButton
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:text="경제"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"

                        fbutton:buttonColor="@color/fbutton_color_peter_river"
                        fbutton:shadowEnabled="false"
                        fbutton:cornerRadius="5dp"
                        />

                    //세금재정
                    <info.hoang8f.widget.FButton
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:text="세금"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"

                        fbutton:buttonColor="@color/fbutton_color_sun_flower"
                        fbutton:shadowEnabled="false"
                        fbutton:cornerRadius="5dp"
                        />
                    //행정
                    <info.hoang8f.widget.FButton
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:text="행정"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="6dp"

                        fbutton:buttonColor="@color/fbutton_color_orange"
                        fbutton:shadowEnabled="false"
                        fbutton:cornerRadius="5dp"
                        />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>